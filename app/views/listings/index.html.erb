<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Vendor</th>
      <th>Quantity</th>
      <th>Species</th>
      <th>Time Remaining</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.vendor.name  %></td>
        <td><%= listing.quantity %></td>
        <td><%= listing.species %></td>
        <td><%= listing.expired? ? "Listing expired" : listing.time_remaining %> </td>
        <td><%= link_to 'Show', vendor_listing_path(listing.vendor_id, listing) %></td>
        <td><%= link_to 'Edit', edit_vendor_listing_path(listing.vendor_id, listing) %></td>
        <td><%= button_to 'Destroy', vendor_listing_path(listing.vendor_id, listing), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @vendor %>
<%= link_to 'New Listing', new_vendor_listing_path(@vendor) %>
<% end %>
<%= link_to 'View Vendors', vendors_path %>
