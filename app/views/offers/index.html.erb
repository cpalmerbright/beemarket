<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Buyer</th>
      <th>Listing</th>
      <th>Amount</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.buyer %></td>
        <td><%= offer.listing %></td>
        <td><%= offer.amount %></td>
        <td><%= offer.accepted %></td>
        <td><%= link_to 'Show', buyer_offer_path(offer.buyer_id, offer) %></td>
        <td><%= link_to 'Edit', edit_buyer_offer_path(offer.buyer_id, offer) %></td>
        <td><%= link_to 'Destroy', buyer_offer_path(offer.buyer_id, offer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_buyer_offer_path() %>
