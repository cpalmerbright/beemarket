<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <% if @buyer %>
          <th>Vendor</th>
      <% end %>
      <% unless @buyer %>
        <th>Buyer</th>
      <% end %>
      <th>Listing</th>
      <th>Amount</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <% if @buyer %>
            <td><%= offer.vendor.name %></td>
      <% end %>
        <% unless @buyer %>
            <td><%= offer.buyer.name %></td>
      <% end %>
        <td><%= offer.listing.quantity.to_s + " " + offer.listing.species %></td>
        <td><%= offer.amount %></td>
        <td><%= offer.accepted ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', buyer_offer_path(offer.buyer_id, offer) %></td>
        <td><%= link_to 'Edit', edit_buyer_offer_path(offer.buyer_id, offer) %></td>
        <td><%= link_to 'Destroy', buyer_offer_path(offer.buyer_id, offer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>